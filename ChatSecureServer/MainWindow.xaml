<Window x:Class="ChatServerWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Сервер чата" Height="600" Width="450" Background="#FF1E1E2E"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Логи -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" Background="#FF1E1E2E">
            <StackPanel x:Name="LogPanel" Margin="5"/>
        </ScrollViewer>

        <!-- Статус -->
        <TextBlock Grid.Row="1" Text="Сервер запущен на 127.0.0.1:5000"
                   Foreground="LightGray" FontSize="14" Margin="5"/>
    </Grid>
</Window>
