<Window x:Class="ChatSecureClient11212.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chat Client" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="MessageBox" Margin="10" Height="100" VerticalAlignment="Bottom"/>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="10">
            <Button Content="😀" Click="ShowEmojiPopup_Click" Margin="0,0,5,0"/>
            <Button Content="🖼️" Click="ShowStickerPicker_Click"/>
            <Button Content="📎" Click="AttachFile_Click" Margin="5,0,0,0"/>

        </StackPanel>
    </Grid>
</Window>
